<div class="container">

    <div style="max-width:500px;margin:auto;" class="d-flex justify-content-center align-items-center vh-100">
    <%= form_for(:session, url: sign_in_path) do |f| %>  
        
        <div class="form-group">
            <%= f.label :email %>:
            <%= f.email_field :email, placeholder: 'johndoe@domain.com', class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :password %>:
            <%= f.password_field :password, class: 'form-control',required:true %><br />
        </div>

        <div class="form-group">
            <%= f.submit "Sign In", class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
    </div>
</div>